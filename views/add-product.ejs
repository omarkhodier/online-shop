<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container text-center">
    <h3>add product</h3>
    <form action="/admin/add" method="post" enctype="multipart/form-data">
        <input type="text" name="name" class="form-control" placeholder="Name"><br>
        <% let nameError = validationErrors.find(err=>err.param === 'name')%>
        <% if(nameError) {%>
            <p class="alert alert-danger">
                <%= nameError.msg %>
            </p>
        <% } %>
        <input type="number" name="price" class="form-control" placeholder="price"><br>
        <% let priceError = validationErrors.find(err=>err.param === 'price')%>
        <% if(priceError) {%>
            <p class="alert alert-danger">
                <%= priceError.msg %>
            </p>
        <% } %>
        <select type="text" name="category" class="form-control" placeholder="category">
                <option>choose category</option>
                <option value="clothes">clothes</option>
                <option value="phones">phones</option>
                <option value="fruits">fruits</option>
                <option value="computer">computer</option>

        </select><br>
        
        <% let categoryError = validationErrors.find(err=>err.param === 'category')%>
        <% if(categoryError) {%>
            <p class="alert alert-danger">
                <%= categoryError.msg %>
            </p>
        <% } %>
        <textarea rows = "3" cols = "20" name = "description" class="form-control">description </textarea><br>
        <% let descriptionError = validationErrors.find(err=>err.param === 'description')%>
        <% if(descriptionError) {%>
            <p class="alert alert-danger">
                <%= descriptionError.msg %>
            </p>
        <% } %>
        <input type="file" name="image" class="form-control" placeholder="image"><br>
        <% let imageError = validationErrors.find(err=>err.param === 'image')%>
        <% if(imageError) {%>
            <p class="alert alert-danger">
                <%= imageError.msg %>
            </p>
        <% } %>
        <input type="submit" class="btn btn-primary" value="ADD product"><br>
    </form>

</div>

<%- include('parts/footer')%>